<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.InfoKosAdmin" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="background">@color/warna_background</item>
        <item name="colorPrimary">@color/warna_button</item>
        <item name="colorPrimaryVariant">@color/warna_second_button</item>
        <item name="colorOnPrimary">@color/warna_button</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/warna_button</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l" tools:ignore="ObsoleteSdkInt">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--Button-->
    <style name="firstbutton">
        <item name="backgroundTint">@color/warna_button</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:state_pressed">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="secondbutton">
        <item name="backgroundTint">@color/warna_second_button</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:state_pressed">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="orderbutton">
        <item name="backgroundTint">@color/card</item>
        <item name="android:textSize">18sp</item>
        <item name="cornerRadius">10dp</item>
        <item name="textAllCaps">false</item>
    </style>
    <!--    <style name="background">-->
    <!--        <item name="backgroundTint">@color/warna_background</item>-->
    <!--    </style>-->

</resources>